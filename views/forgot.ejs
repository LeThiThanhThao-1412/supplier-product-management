<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Quên mật khẩu</h4>
            </div>
            <div class="card-body">
                <form method="POST" action="/auth/forgot">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email đăng ký</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Gửi yêu cầu reset</button>
                    </div>
                </form>
                <div class="mt-3 text-center">
                    <p><a href="/auth/login">Quay lại đăng nhập</a></p>
                </div>
            </div>
        </div>
    </div>
</div>